               *this\image\padding\y = *this\text\padding\y
               
               ; make horizontal scroll max
               If *this\scroll_width( ) < *this\image\width + *this\image\padding\x * 2
                  *this\scroll_width( ) = *this\image\width + *this\image\padding\x * 2
               EndIf
               
