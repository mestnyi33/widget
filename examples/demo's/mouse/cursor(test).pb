      SetFrame( Button_3, 20)
      Button_4 = String(250,120,110,80, "String") 
      Button_5 = Button(320,120,110,80, "Button 3") 
      
      Disable( Button_1, 1 )
      
      SetCursor( Button_0, #__cursor_Hand )
