      Procedure   IsChild( *this._s_WIDGET, *parent._s_WIDGET )
         Protected result
         ;
         If *this And 
            *this <> *parent And 
            *parent\haschildren
            ;
            Repeat
               *this = *this\parent
               If *this
                  If *parent = *this
                     result = *this
                     Break
                  EndIf
               Else
                  Break
               EndIf
            Until is_root_( *this )
         EndIf
         ;
         ProcedureReturn result
      EndProcedure
      
