      Procedure.b bar_Update( *this._s_WIDGET, mode.b = 1 )
         Protected fixed.l, ScrollPos.f, ThumbPos.i, Width, Height
         
         ;\\
         If Not *this\bar
            ProcedureReturn 0
         EndIf
         Protected *bar._s_BAR = *this\bar
         Protected._s_BUTTONS *BB1, *BB2, *SB
         *SB  = *bar\button
         *BB1 = *bar\button[1]
         *BB2 = *bar\button[2]
         
         ;Debug ""+ mode +" "+ *this\bar\PageChange( )
