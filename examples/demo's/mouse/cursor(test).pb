      Procedure.i Sticky( *window._s_WIDGET = #PB_Default, state.b = #PB_Default )
         Protected result = PopupWindow( )
         
         If state <> #PB_Default
            If is_window_( *window )
               If state
                  PopupWindow( ) = *window
               Else
                  PopupWindow( ) = #Null
               EndIf
               
               SetForeground( *window )
            EndIf
         EndIf
         
         ProcedureReturn result
      EndProcedure
      
