            result = 1
         EndIf
         
         ;\\ change horizontal scrollbar max
         If *this\scroll\h And *this\scroll\h\bar\max <> *this\scroll_width( ) And
            bar_SetAttribute( *this\scroll\h, #PB_ScrollBar_Maximum, *this\scroll_width( ) )
