         With *this
            If Not *this\hide
               ;\\ update coordinate
               If _change_ > 0
                  ; Debug "   " + #PB_Compiler_Procedure + "( )"
                  
                  ;\\
                  ReDrawing( *this, *this\EnteredLine( ) )
                  
                  
