                  EndIf
                  If *this\bounds\move\max\y <> #PB_Ignore
                     If Height = #PB_Ignore
                        If Y > *this\bounds\move\max\y - *this\frame_height( )
                           Y = *this\bounds\move\max\y - *this\frame_height( )
                        EndIf
                     Else
