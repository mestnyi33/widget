               Next
               PopListPosition( *this\__tabs( ) ) 
               ;
               If state >= 0 
                  If bar_tab_SetState( *this, state ) 
                     result = #True
                  EndIf
               EndIf
            EndIf
         EndIf
         
         ;\\
         If eventtype = #__event_MouseMove
            If *SB\press
               If *bar\vertical
                  If bar_ThumbChange( *this, ( mouse( )\y - mouse( )\delta\y ))
                     result = #True
                  EndIf
               Else
                  If bar_ThumbChange( *this, ( mouse( )\x - mouse( )\delta\x ))
                     result = #True
                  EndIf
