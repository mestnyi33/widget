                  EndIf
                  ;
               EndIf
            EndIf
            ;
            ;\\ draw anchors (movable & sizable)
            If a_transform( ) 
               ;\\
               If a_focused( ) And
                  a_focused( )\hide = 0 And
                  a_focused( )\anchors And
                  a_focused( )\anchors\mode And
                  a_focused( )\root = *root
                  
                  ; draw key-focused-widget anchors
                  If a_main( ) 
                     clip_output_( a_main( ), [#__c_draw2] )
