               Case #__bar_scrollstep : result = *this\scroll\increment ; 5
                  
               Case #__bar_buttonsize : result = *this\bar\button[1]\size
               Case #__bar_direction : result = *this\bar\direction
               Case #__bar_invert : result = *this\bar\invert
