            Case #PB_EventType_CloseItem        : result.s = "CloseItem"
            Case #PB_EventType_SizeItem         : result.s = "SizeItem"
            Case #PB_EventType_Down             : result.s = "Down"
            Case #PB_EventType_Up               : result.s = "Up"
               ;                
               ;             Case #pb_eventtype_cursor : result.s = "Cursor"
