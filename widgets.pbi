      Macro bar_in_start_( _bar_ )
         Bool( _bar_\thumb\pos <= _bar_\area\pos ) ; _bar_\page\pos <= _bar_\min + _bar_\min[1] ) ;
                                                   ;Debug ""+_bar_\page\pos +" "+ _bar_\min +" "+ _bar_\min[1]
      EndMacro
      
