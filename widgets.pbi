      Macro bar_page_pos_( _bar_, _thumb_pos_ )
         ( _bar_\min + _bar_\min[2] + Round((( _thumb_pos_ ) - _bar_\area\pos ) / _bar_\percent, #PB_Round_Nearest ))
      EndMacro
      
      Macro bar_thumb_pos_( _bar_, _scroll_pos_ )
