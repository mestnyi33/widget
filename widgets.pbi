                  _this_\scroll\h\hide = - 1
               Else
                  _this_\scroll\h\hide = _this_\scroll\h\hide[1]
               EndIf
            EndIf
         EndIf
         
         ; Чтобы обновить границы отоброжения (clip-coordinate)
