                              clip_output_( a_entered( ), [#__c_draw] )
                              a_draw( a_entered( ) )
                           EndIf
                        EndIf
                     EndIf
                     ;
                     ;\\ begin draw all widgets
                     Draw( __widgets( ))
                     ;
