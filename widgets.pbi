                  Break
               EndIf
            Next
            PopListPosition( __widgets( ) )
         EndIf
         ProcedureReturn result
      EndProcedure
      
      Procedure.i Sticky( *window._s_WIDGET = #PB_Default, state.b = #PB_Default )
