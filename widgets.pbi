            EndIf
            
            ;\\
            If X = #PB_Ignore
               X = *this\container_x( )
            ElseIf *this\parent And *this\parent\container
               If Not *this\child
                  X + *this\parent\scroll_x( )
               EndIf
               *this\container_x( ) = X
            EndIf
            If Y = #PB_Ignore
               Y = *this\container_y( )
            ElseIf *this\parent And *this\parent\container
               If Not *this\child
