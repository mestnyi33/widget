                        *this\RowFocused( )\ColorState( ) = #__s_1
                        result2 = 1
                     EndIf
                  EndIf
                  
                  ;
                  If is_integral_( *this ) 
;                      If *this\parent  
;                         If *this\parent\parent And *this\parent\parent\type = #__type_ComboBox
