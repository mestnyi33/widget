                              If ActiveGadget( ) And
                                 ActiveGadget( )\focus > 0 And 
                                 ActiveGadget( )\haschildren And  
                                 ActiveGadget( ) <> GetActive( ) 
                                 
                                 If ActiveGadget( )\AfterWidget( ) = __widgets( )  
