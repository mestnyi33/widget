         If *this\parent
            *parent = *this\parent
            
            ;\\ get main parent
            While *parent
               If IsChild( *this, *parent )
                  If *parent\parent And
                     Not *parent\parent\parent
                     ; Debug "*parent "+*parent\class
                     result = *parent
                  EndIf
                  *parent = *parent\parent
               EndIf
            Wend
         EndIf
         
         ProcedureReturn result
      EndProcedure
      
      
      
      
