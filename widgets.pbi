            If Not is_inside_( *this\y[#__c_inner], *this\height[#__c_inner], mouse( )\y ) And *this\scroll\v
               If mouse( )\y < mouse( )\delta\y
                  If Not bar_in_start_( *this\scroll\v\bar )
