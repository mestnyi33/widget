         ;          EndIf
         ;          If *this\fs[2] ; top
         ;             draw_box_( *this\frame_x( ), *this\frame_y( ), *this\frame_width( ), *this\fs[2] + 1, *this\color\back[0] )
         ;          EndIf
         ;          If *this\fs[3] ; right
