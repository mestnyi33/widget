      ;-
      ;-  EDIT STRING
      Procedure$  GetQuote( text$, len, caret ) ; Ok
         Protected i, chr$, start, stop 
         
         For i = caret To 0 Step - 1
            chr$ = Mid( text$, i, 1 )
            If chr$ = ~"\"" 
               start = i
               
               For i = caret + 1 To len 
                  chr$ = Mid( text$, i, 1 )
                  If chr$ = ~"\""
                     stop = i - start + 1
                     Break 2
                  EndIf
               Next i
               
               Break
            EndIf
         Next i
         
         If stop 
            ; Debug #PB_Compiler_Procedure +" ["+ start +" "+ stop +"]"
            ProcedureReturn Mid( text$, start, stop )
         EndIf
      EndProcedure
      Procedure$  GetWord( text$, len, caret ) ; Ok
         Protected i, chr$, start = 0, stop = len
         
         chr$ = GetQuote( text$, len, caret ) 
         If chr$
            ProcedureReturn chr$
         EndIf
         
         For i = caret To 0 Step - 1
            chr$ = Mid( text$, i, 1 )
            If chr$ = " " Or 
               chr$ = "(" Or 
               chr$ = "[" Or 
               chr$ = "{" Or 
               chr$ = ")" Or 
               chr$ = "]" Or 
               chr$ = "}" Or 
               chr$ = "=" Or 
               chr$ = "'" Or ; chr$ = ~"\"" Or 
               chr$ = "+" Or 
               chr$ = "-" Or 
               chr$ = "*" Or 
               chr$ = "/" Or 
               chr$ = "." Or 
               chr$ = ","
               start = i + 1
               Break
            EndIf
         Next i
         
         For i = caret + 1 To len 
            chr$ = Mid( text$, i, 1 )
            If chr$ = " " Or 
               chr$ = ")" Or 
               chr$ = "]" Or 
               chr$ = "}" Or 
               chr$ = "(" Or 
               chr$ = "[" Or 
               chr$ = "{" Or 
               chr$ = "=" Or 
               chr$ = "'" Or ; chr$ = ~"\"" Or
               chr$ = "+" Or 
               chr$ = "-" Or 
               chr$ = "*" Or 
               chr$ = "/" Or 
               chr$ = "." Or 
               chr$ = "," 
               stop = i - start 
               Break
            EndIf
         Next i
         
         If stop
            ; Debug #PB_Compiler_Procedure +" ["+ start +" "+ stop +"]"
            ProcedureReturn Mid( text$, start, stop )
         EndIf
      EndProcedure
      
