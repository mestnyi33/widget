            If is_no_select_item_( *this\__tabs( ), Item )
               ProcedureReturn ""
            EndIf
            
            result = *this\__tabs( )\text\string
         EndIf
         
         If *this\countitems ; row count
            If is_no_select_item_( *this\__rows( ), Item )
